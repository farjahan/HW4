<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FF00"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/liv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:text="@string/liv" />

    <TextView
        android:id="@+id/lev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sc"
        android:layout_alignBottom="@+id/sc"
        android:layout_marginRight="91dp"
        android:layout_toLeftOf="@+id/sc"
        android:text="@string/lev" />

    <TextView
        android:id="@+id/sc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/liv"
        android:layout_alignBottom="@+id/liv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="63dp"
        android:text="@string/sc" />

</RelativeLayout>
